{
    "version": 2,
    "functions": {
        "api/index.ts": {
            "includeFiles": "server/**,shared/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index"
        }
    ]
}