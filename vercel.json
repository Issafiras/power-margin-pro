{
    "version": 2,
    "outputDirectory": "dist/public",
    "functions": {
        "dist/api/index.js": {
            "includeFiles": "dist/public/**",
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/dist/api/index"
        },
        {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
        }
    ]
}